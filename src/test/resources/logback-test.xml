<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Configuração de logs apenas para testes -->
    
    <!-- Suprimir logs DEBUG/INFO desnecessários durante testes -->
    <logger name="org.springframework" level="WARN"/>
    <logger name="org.springframework.boot.test" level="WARN"/>
    <logger name="org.hibernate" level="WARN"/>
    <logger name="org.flywaydb" level="WARN"/>
    
    <!-- Suprimir logs da aplicação durante testes de exception handling -->
    <logger name="br.com.projeto.piloto.adapter.in.web.exception" level="OFF"/>
    <logger name="br.com.projeto.piloto" level="INFO"/>
    
    <root level="WARN">
        <appender-ref ref="CONSOLE"/>
    </root>
</configuration>
